{
  "name": "slime-kingdom",
  "version": "0.1.0",
  "description": "A cozy MMO RPG for kids and nostalgic adults",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production node server/index.js",
    "server": "node server/index.js",
    "heroku-postbuild": "npm run build && npx prisma generate && npx prisma db push --accept-data-loss",
    "db:docker": "docker run --name slime-kingdom-db -e POSTGRES_PASSWORD=password -e POSTGRES_DB=slime_kingdom -p 5432:5432 -d postgres:16",
    "db:init": "psql -h localhost -U postgres -d slime_kingdom -f db/init_db.sql",
    "db:seed": "node scripts/seed-db.js",
    "db:seed:heroku": "node scripts/seed-db.js --heroku",
    "db:migrate": "npx prisma migrate dev",
    "db:push": "npx prisma db push",
    "db:push:heroku": "npx prisma db push && npm run db:seed:heroku",
    "db:studio": "npx prisma studio",
    "prisma:generate": "npx prisma generate"
  },
  "devDependencies": {
    "vite": "^5.4.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "phaser": "^3.80.1",
    "prisma": "^5.22.0",
    "sharp": "^0.34.5",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1"
  }
}
